extends layout

block datos
    h2= titulo
    if hayProductos
        div(class="table-responsive")
            table(class="table table-dark")
                tr(style="color: yellow;")
                    th Nombre
                    th Precio
                    th Imagen
                each producto in productos
                    tr
                        td= producto.title
                        td= "$ "+producto.price
                        td
                            img(src=producto.thumbnail alt=producto.title width="50")
    else 
        h3(class="alert alert-danger")= "No se encontraron" + titulo
    if hayProductos
        div(class="alert alert-success")
            h3= "Se encontraron " + productos.length + " productos"
    a(type="button" class="btn btn-primary" href="/productos/formulario")= "Formulario"